# MindHub Backend - Environment Variables

# =============================================================================
# APP CONFIG
# =============================================================================
APP_VERSION=1
ENV=development
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info
FILES_PATH=./temp

# =============================================================================
# DATABASE CONFIG - PostgreSQL (Não utilizado atualmente)
# =============================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=mindhub-dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# DATABASE CONFIG - MongoDB
# =============================================================================
# URL de conexão do MongoDB
MONGO_URI=mongodb://localhost:27017

# Nome do banco de dados
MONGO_DATABASE_NAME=mindhub-dev

# =============================================================================
# REDIS CONFIG
# =============================================================================
# Host e porta do Redis (usado para cache e sessões)
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# AWS S3 CONFIG
# =============================================================================
# Credenciais AWS (para upload de arquivos)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
AWS_BUCKET_NAME=mindhub-files
AWS_S3_URL=http://localhost:4566

# =============================================================================
# JWT CONFIG
# =============================================================================
# Algoritmo de criptografia
ALGORITHM=HS256

# Secret para assinar tokens de acesso (MUDE EM PRODUÇÃO!)
ACCESS_TOKEN_SECRET=seu_secret_super_seguro_aqui_mude_em_producao

# Tempo de expiração do access token em minutos (24h = 1440 minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Tempo de expiração do refresh token em segundos (24h = 86400 segundos)
REFRESH_TOKEN_EXPIRE_SECONDS=86400
